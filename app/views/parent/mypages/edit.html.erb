<h1>保護者様用Parent::Mypage#edit</h1>
<h1><%= @parent.first_name %> <%= @parent.last_name %>の情報編集</h1>

<%= form_with model: @parent, url: mypage_path, method: :patch, local: true do |f| %>

  <p>
    <label for="last_name">姓：</label>
    <%= f.text_field :last_name %>
  </p>

  <p>
    <label for="first_name">名：</label>
    <%= f.text_field :first_name %>
  </p>

  <p>
    <label for="last_name_kana">姓（カナ）：</label>
    <%= f.text_field :last_name_kana %>
  </p>

  <p>
    <label for="first_name_kana">名（カナ）：</label>
    <%= f.text_field :first_name_kana %>
  </p>

  <p>
    <label for="postal_code">郵便番号：</label>
    <%= f.text_field :postal_code %>
  </p>

  <p>
    <label for="address">住所：</label>
    <%= f.text_field :address %>
  </p>

  <p>
    <label for="phone_number">電話番号：</label>
    <%= f.text_field :phone_number %>
  </p>

  <%= f.submit "登録情報更新" %>
<% end %>

<%= link_to 'Back to Mypage', mypage_path, class: 'button' %>