<h1>職員用::Mypage#edit</h1>
<h1><%= @employee.first_name %> <%= @employee.last_name %>の情報編集</h1>

<%= form_with model: @employee, url: employee_mypage_path, method: :patch, local: true do |f| %>

  <div>
    <label for="last_name">姓：</label>
    <%= f.text_field :last_name, id: "last_name" %>
  </div>

  <div>
    <label for="first_name">名：</label>
    <%= f.text_field :first_name, id: "first_name" %>
  </div>

  <div>
    <label for="last_name_kana">姓（カナ）：</label>
    <%= f.text_field :last_name_kana, id: "last_name_kana" %>
  </div>

  <div>
    <label for="first_name_kana">名（カナ）：</label>
    <%= f.text_field :first_name_kana, id: "first_name_kana" %>
  </div>

  <div>
    <label for="postal_code">郵便番号：</label>
    <%= f.text_field :postal_code, id: "postal_code" %>
  </div>

  <div>
    <label for="address">住所：</label>
    <%= f.text_field :address, id: "address" %>
  </div>

  <div>
    <label for="phone_number">電話番号：</label>
    <%= f.text_field :phone_number, id: "phone_number" %>
  </div>

  <div>
    <%= f.submit '登録情報更新' %>
  </div>

<% end %>

<%= link_to 'マイページに戻る', employee_mypage_path, class: 'button' %>