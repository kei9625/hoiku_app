<h1>Employee::Parents#edit</h1>
<h1>職員用　保護者情報の編集</h1>

<%= form_with model: @parent, url: employee_parent_path(@parent), method: :patch do |f| %>

  <p>
    <label for="last_name">姓：</label>
    <%= f.text_field :last_name %>
  </p>

  <p>
    <label for="first_name">名：</label>
    <%= f.text_field :first_name %>
  </p>

  <p>
    <label for="last_name_kana">姓（カナ）：</label>
    <%= f.text_field :last_name_kana %>
  </p>

  <p>
    <label for="first_name_kana">名（カナ）：</label>
    <%= f.text_field :first_name_kana %>
  </p>

  <p>
    <label for="postal_code">郵便番号：</label>
    <%= f.text_field :postal_code %>
  </p>

  <p>
    <label for="address">住所：</label>
    <%= f.text_field :address %>
  </p>

  <p>
    <label for="phone_number">電話番号：</label>
    <%= f.text_field :phone_number %>
  </p>

  <div class="actions">
    <%= f.submit "登録情報更新" %>
  </div>

  <%= link_to '詳細ページに戻る', employee_parent_path(@parent), class: 'button' %>


<% end %>
