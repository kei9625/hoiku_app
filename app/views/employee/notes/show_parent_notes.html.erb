<!--show_parent_notes.html.erb-->
<div class="container mt-5">
  <h1 class="text-center mb-4"><%= @parent.full_name %> の連絡帳</h1>

  <div class="table-responsive">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>Title</th>
          <th>Content</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @notes.each do |note| %>
          <tr>
            <td><%= note.title %></td>
            <td><%= note.content.truncate(30) %></td>
            <td><%= link_to 'Show', employee_note_path(note), class: 'btn btn-primary btn-sm' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class="text-center">
    <%= link_to '戻る', employee_notes_path, class: 'btn btn-secondary' %>
  </div>
</div>
